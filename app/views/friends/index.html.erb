<h1>Listing friends</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Friend user name</th>
      <th>Active</th>
      <th>Active since</th>
      <th>Created at</th>
      <th>Image</th>
      <th>User_Id</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.user_name %></td>
        <td><%= friend.friend_user_name %></td>
        <td><%= friend.active %></td>
        <td><%= friend.active_since %></td>
        <td><%= friend.created_at %></td>
        <td><%= friend.image %></td>
	<td><%= friend.user_id %></td>

        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

