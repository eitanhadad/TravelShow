					<%end%>					
            			    </div>  
          			</div>  
			</div>
		</div>

 
		<div class="span6"> 
  			<div class="row-fluid"> 
        			<fieldset>  
          				<div class="control-group">  
            					<label class="control-label" for="input01"><%= f.label :name %></label>  
            				    <div class="controls">  
              					<%= f.text_field :name %>   
            				    </div>  
          				</div>  
          				<div class="control-group">  
            				       <label class="control-label" for="input01"><%= f.label :continent %></label>  
            				   <div class="controls">  
              				       <%= f.text_field :continent %>  
            				   </div>  
          				</div>  
					<div class="control-group">  
            				       <label class="control-label" for="input01"><%= f.label :country %></label>  
