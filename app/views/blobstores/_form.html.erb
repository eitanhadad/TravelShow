              				       <%= f.text_field :country %>  
            				   </div>  
 					 <div class="control-group">  
            				       <label class="control-label" for="input01"><%= f.label :city %></label>  
            				   <div class="controls">  
              				       <%= f.text_field :city %>  
            				   </div> 
<div class="control-group">  
            				       <label class="control-label" for="input01"><%= f.label :title %></label>  
            				   <div class="controls">  
              				       <%= f.text_field :title %>  
            				   </div>  
<div class="control-group">  
            				       <label class="control-label" for="input01"><%= f.label :caption %></label>  
            				   <div class="controls">  
              				       <%= f.text_field :caption %>  
            				   </div>   

